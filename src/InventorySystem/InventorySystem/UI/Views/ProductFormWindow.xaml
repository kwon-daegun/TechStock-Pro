<Window x:Class="InventorySystem.UI.Views.ProductFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Details" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#111827" ResizeMode="NoResize">

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Product Details" Foreground="#FFF" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Product Name" Foreground="#9CA3AF" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtName" Padding="5" Background="#1F2937" Foreground="#FFF" BorderThickness="0" Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Brand" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtBrand" Padding="5" Background="#1F2937" Foreground="#FFF" BorderThickness="0"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Category" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtCategory" Padding="5" Background="#1F2937" Foreground="#FFF" BorderThickness="0"/>
                </StackPanel>
            </Grid>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Price (₹)" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtPrice" Padding="5" Background="#1F2937" Foreground="#FFF" BorderThickness="0"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Stock Quantity" Foreground="#9CA3AF" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtStock" Padding="5" Background="#1F2937" Foreground="#FFF" BorderThickness="0"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Image URL" Foreground="#9CA3AF" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtImage" Text="../Assets/Images/Icons/placeholder_icon.png" Padding="5" Background="#1F2937" 
                     Foreground="#FFF" BorderThickness="0" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnDelete" Content="Delete" Click="BtnDelete_Click" 
                        Background="#EF4444" Foreground="#FFF" Width="80" Height="35" Margin="0,0,10,0"
                        Visibility="Collapsed">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Cancel" IsCancel="True" Background="Transparent" Foreground="#9CA3AF" 
                        Width="80" Margin="0,0,10,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Save Product" Click="BtnSave_Click" 
                        Background="#2563EB" Foreground="White" FontWeight="Bold" Width="120" Height="35">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>