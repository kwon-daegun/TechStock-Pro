<Window x:Class="InventorySystem.UI.Views.Windows.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Details" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#111827">
    <Window.Resources>
        <Style x:Key="GhostButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF202B3C"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                                <Setter Property="Foreground" Value="#FFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20" Background="#111827">
            <TextBox x:Name="TxtOrderId" Text="Order #00000" IsReadOnly="True" Background="Transparent"
                     BorderThickness="0" Foreground="White" FontSize="22" FontWeight="Bold" Cursor="IBeam"/>
            <TextBlock x:Name="TxtOrderDate" Text="Oct 24, 2024" Foreground="#9CA3AF"/>
        </StackPanel>

        <DataGrid x:Name="DetailsGrid" Grid.Row="1" Background="#1F2937" BorderThickness="0" 
                  HeadersVisibility="Column" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="50"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#374151">
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#fff"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Resources>
                <Style x:Key="CenterText" TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="10,0,0,0"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="PRODUCT" Binding="{Binding Product.Name}" 
                                    Width="*" ElementStyle="{StaticResource CenterText}"/>

                <DataGridTextColumn Header="QTY" Binding="{Binding Quantity}" 
                                    Width="80" ElementStyle="{StaticResource CenterText}"/>

                <DataGridTextColumn Header="PRICE" Binding="{Binding UnitPrice, StringFormat='₹ {0:N2}'}" 
                                    Width="120" ElementStyle="{StaticResource CenterText}"/>

                <DataGridTextColumn Header="TOTAL" Binding="{Binding Total, StringFormat='₹ {0:N2}'}" 
                                    Width="120" FontWeight="Bold" ElementStyle="{StaticResource CenterText}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Margin="0,20,0,0" BorderBrush="#374151" BorderThickness="0,1,0,0" Padding="0,15,0,0">
            <DockPanel>
                <Button Content="Close" Style="{StaticResource GhostButtonStyle}" Width="100" Height="35" Click="BtnClose_Click" Foreground="#9CA3AF" BorderBrush="#374151"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Total Amount:" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock x:Name="TxtTotalAmount" Text="₹ 0.00" Foreground="#10B981" FontSize="20" VerticalAlignment="Center" 
                               Margin="0,0,0,4" FontWeight="Bold"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>