<Window x:Class="InventorySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TechStock Pro" Height="1024" Width="1440"
        WindowStartupLocation="CenterScreen"
        Background="#0C0F14">
	
    <Window.Resources>
		<SolidColorBrush x:Key="SideBarColor" Color="#161921" />
	    <SolidColorBrush x:Key="ActiveLogoColor" Color="#5EB8FA" />
	    <SolidColorBrush x:Key="ActiveLogoBgColor" Color="#1E263C" />
        <SolidColorBrush x:Key="TextGray" Color="#B9B9B9" />
        <SolidColorBrush x:Key="TextWhite" Color="#FFFFFF" />

	    <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="90"/> <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#A0A3BD"/> 
    
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">                        
						    <Grid Background="Transparent">
							    <Border x:Name="LeftIndicator" Width="4" Height="75" HorizontalAlignment="Left"
									VerticalAlignment="Center" Background="#3B82F6" CornerRadius="0,6,6,0"
									Opacity="0"/>
                                <Border x:Name="ButtonBorder" CornerRadius="10" Background="{TemplateBinding Background}"
                                    Width="90" Height="75">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Border Width="30" Height="30" Margin="0,15,0,0">
                                                <Image x:Name="ButtonIcon" Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                                    Stretch="Uniform" Opacity="0.7"/> 
                                            </Border>

                                            <ContentPresenter x:Name="ButtonText" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  TextBlock.FontSize="14" TextBlock.FontWeight="SemiBold" Margin="0,8,0,15"/>
                                        </StackPanel>
                                </Border>
						    </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonText" Property="TextBlock.Foreground" Value="White"/>
                                    <Setter TargetName="ButtonIcon" Property="Opacity" Value="1.0"/>
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#2B3240"/> 
                                </Trigger>

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#1E263C"/>
                                    <Setter TargetName="ButtonText" Property="TextBlock.Foreground" Value="#FFF"/> 
                                    <Setter TargetName="ButtonIcon" Property="Opacity" Value="1.0"/>
                                    <Setter TargetName="LeftIndicator" Property="Opacity" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="122"/>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Border Grid.Column="0" Background="{StaticResource SideBarColor}" BorderBrush="#323232" BorderThickness="0,0,1,0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="125" />
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
					<Border Width="75" Height="75" CornerRadius="15" Background="#1E263C">
						<Image Source="UI/Assets/Images/Logo/logo.png" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
					</Border>
				</StackPanel>

				<StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,10">
					<RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Dashboard" Tag="UI/Assets/Images/Icons/dashboard_icon.png"
                            Click="BtnDashboard_Click" IsChecked="True"/>
			        <RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Products" Tag="UI/Assets/Images/Icons/products_icon.png"
							 Click="BtnProducts_Click" />
			        <RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Orders" Tag="UI/Assets/Images/Icons/orders_icon.png"
							 Click="BtnOrders_Click" />
			        <RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Suppliers" Tag="UI/Assets/Images/Icons/suppliers_icon.png"
							 Click="BtnSuppliers_Click" />
			        <RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Reports" Tag="UI/Assets/Images/Icons/reports_icon.png"
							 Click="BtnReports_Click" />
				</StackPanel>
			
		        <StackPanel Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0">
					<RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Settings" Tag="UI/Assets/Images/Icons/settings_icon.png"
                            Click="BtnSettings_Click"/>
			        <RadioButton Style="{StaticResource MenuButtonStyle}" GroupName="Menu" Content="Log Out" Tag="UI/Assets/Images/Icons/logout_icon.png"
							 Click="BtnLogout_Click" />
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Window>